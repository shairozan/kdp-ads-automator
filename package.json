{
  "name": "kdp-ad-automator",
  "version": "1.0.0",
  "description": "MCP server for KDP advertising analytics and ROI tracking",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "mcp": "node dist/mcp/mcp-server.js",
    "mcp:dev": "tsx src/mcp/mcp-server.ts",
    "worker": "node dist/worker/sync-worker.js",
    "worker:dev": "tsx src/worker/sync-worker.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "import:csv": "tsx src/scripts/import-csv.ts"
  },
  "keywords": [
    "kdp",
    "amazon-advertising",
    "mcp",
    "analytics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
